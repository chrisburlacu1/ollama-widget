{
  "name": "ollama-widget",
  "version": "1.0.0",
  "description": "Electron widget for monitoring Ollama API",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.ollama.widget",
    "productName": "Ollama Widget",
    "icon": "src/assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "electron-builder": "^24.13.3"
  }
}
